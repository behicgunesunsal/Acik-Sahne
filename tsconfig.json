{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["react", "react-native"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["**/*.ts", "**/*.tsx", "index.js"],
  "exclude": ["node_modules"]
}
